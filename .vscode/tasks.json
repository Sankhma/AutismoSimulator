{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build everything",
            "command": "C:\\mingw\\bin\\g++.exe",
            "args": [
                "-g",
                // "${file}",
				"-std=c++17",
				"-I./include",
				"-L./lib",
				"source/\\*.cpp",
				"source/glad.c",
				"-lglfw3dll",
				"-Wall",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "options": {
                // "cwd": "C:\\mingw\\bin",
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build everything."
        }
    ],
    "version": "2.0.0"
}